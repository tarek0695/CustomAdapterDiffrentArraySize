<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ddd"
    >

    <ImageView
        android:id="@+id/pepole1"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:src="@drawable/user1"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <TextView
        android:id="@+id/dialouge_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dialouge 1"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintStart_toEndOf="@+id/pepole1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/speaker_left"
        android:background="@drawable/shape_bg_incoming_bubble"
        />

    <TextView
        android:id="@+id/translation_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialouge1_tv"
        android:textSize="@dimen/_12ssp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="Translation 1"
        app:layout_constraintStart_toStartOf="@+id/dialouge_tv1"
        app:layout_constraintTop_toBottomOf="@+id/dialouge_tv1"
        app:layout_constraintEnd_toEndOf="@+id/dialouge_tv1"/>

    <ImageView
        android:id="@+id/speaker_left"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/speakerleft"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        app:layout_constraintStart_toEndOf="@+id/dialouge_tv1"
        app:layout_constraintTop_toTopOf="@+id/dialouge_tv1"
        app:layout_constraintBottom_toBottomOf="@+id/translation_tv1"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <ImageView
        android:id="@+id/speaker_right"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/speakerright"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialouge_tv2"
        app:layout_constraintBottom_toBottomOf="@+id/translation_tv2"
        app:layout_constraintEnd_toStartOf="@+id/dialouge_tv2"
        />


    <TextView
        android:id="@+id/dialouge_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="Dialouge 2"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toStartOf="@+id/pepole2"
        app:layout_constraintStart_toEndOf="@+id/speaker_right"
        app:layout_constraintTop_toBottomOf="@+id/translation_tv1" />

    <TextView
        android:id="@+id/translation_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialouge2_tv"
        android:textSize="@dimen/_12ssp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="Translation 2"
        app:layout_constraintStart_toStartOf="@+id/dialouge_tv2"
        app:layout_constraintTop_toBottomOf="@+id/dialouge_tv2"
        app:layout_constraintEnd_toEndOf="@+id/dialouge_tv2"/>

    <ImageView
        android:id="@+id/pepole2"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:src="@drawable/user2"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        app:layout_constraintStart_toEndOf="@+id/dialouge_tv2"
        app:layout_constraintTop_toBottomOf="@+id/translation_tv1"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>